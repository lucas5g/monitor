generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  techs ProjectTech[]

  @@map("projects")
}

model Tech {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  release      String
  projects ProjectTech[]

  @@map("techs")
}

model ProjectTech {
  project     Project @relation(fields: [project_id], references: [id])
  project_id   Int
  tech        Tech    @relation(fields: [tech_id], references: [id])
  tech_id      Int
  release_used String

  @@unique([project_id, tech_id])
  @@map("projects_techs")
}
